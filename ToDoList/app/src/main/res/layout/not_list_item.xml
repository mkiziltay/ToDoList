<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:background="@drawable/rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Başlığı"
            android:textColor="#F1C40F"
            android:fontFamily="sans-serif-condensed-medium"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="23dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/collapse"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>



    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Açıklaması"
        android:visibility="gone"
        style="@style/CardView"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Tarihi : "
            style="@style/CardView"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  12/12/2021 12:00"
            style="@style/CardView"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hatırlatma Tarihi : "
            style="@style/CardView"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/notftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  12/12/2021 12:00"
            style="@style/CardView"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/notfImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_launcher_foreground"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"/>
    </LinearLayout>
    <View
        android:id="@+id/colored_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white" />

</LinearLayout>